<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hemeiyue.dao.ActivityMapper">

	<resultMap id="BaseResultMap" type="com.hemeiyue.entity.Activity">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="title" property="title" jdbcType="VARCHAR" />
		<result column="content" property="content" jdbcType="VARCHAR" />
		<result column="date" property="date" jdbcType="TIMESTAMP" />
		<result column="time" property="time" jdbcType="TIMESTAMP" />
		<result column="number" property="number" jdbcType="INTEGER" />
		<result column="status" property="status" jdbcType="INTEGER" />
		<result column="imageUrl" property="imageUrl" jdbcType="VARCHAR" />
		<result column="address" property="address" jdbcType="VARCHAR" />
		<association property="address" column="addrId"
			select="com.hemeiyue.dao.RoomsMapper.selectById" />
		<association property="owner" column="ownerId"
			select="com.hemeiyue.dao.AdminsMapper.selectById" />
		<association property="school" column="schoolId"
			select="com.hemeiyue.dao.SchoolsMapper.selectById" />
	</resultMap>

	<resultMap type="com.hemeiyue.common.ActivityShowModel" id="activityShowModelMap">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="title" property="activityTitle" jdbcType="VARCHAR" />
		<result column="content" property="content" jdbcType="VARCHAR" />
		<result column="date" property="date" jdbcType="TIMESTAMP" />
		<result column="time" property="time" jdbcType="TIMESTAMP" />
		<result column="number" property="count" jdbcType="INTEGER" />
		<result column="imageUrl" property="imageUrl" jdbcType="VARCHAR" />
		<result column="status" property="status" jdbcType="INTEGER" />
		<association property="sign" column="id"
			select="com.hemeiyue.dao.ActivityUserMapper.findCountActivity" />
		<association property="address" column="addrId"
			select="com.hemeiyue.dao.RoomsMapper.selectById" />
	</resultMap>

	<select id="selectById" parameterType="Integer" resultType="Activity">
		select * from activity where id=#{id}
	</select>

	<select id="findActivityDesc" parameterType="Map" resultMap="BaseResultMap">
		select id, title, address, date,time,status,number from activity
		<where>
			<if test="title!=null and title!=''">
				and title = #{title}
			</if>
			<if test="date!=null">
				and date = #{date}
			</if>
			<if test="time!=null and time!=''">
				and time = #{time}
			</if>
			<if test="number!=null and number!=''">
				and number = #{number}
			</if>
			<if test="imageUrl!=null">
				imageUrl = #{imageUrl}
			</if>
			<if test="address!=null">
				and address = #{address}
			</if>
			<if test="school!=null">
				and schoolId = #{school.id}
			</if>
			<if test="owner!=null">
				and ownerId = #{owner.id}
			</if>

		</where>
	</select>

	<update id="deleteById" parameterType="Integer">
		update activity set status=-1
		where id=#{id}
	</update>

	<update id="updateByPrimaryKeySelective" parameterType="com.hemeiyue.entity.Admin">
		update activity
		<set>
			<if test="title != null">
				title = #{title,jdbcType=VARCHAR},
			</if>
			<if test="content != null">
				content = #{content,jdbcType=VARCHAR},
			</if>
			<if test="date != null">
				date = #{date,jdbcType=TIMESTAMP},
			</if>
			<if test="time != null">
				time = #{time,jdbcType=TIMESTAMP},
			</if>
			<if test="number != null">
				number = #{number,jdbcType=INTEGER},
			</if>
			<if test="status != null">
				status = #{status,jdbcType=VARCHAR},
			</if>
			<if test="imageUrl != null">
				imageUrl= #{imageUrl,jdbcType=VARCHAR},
			</if>
			<if test="address != null">
				address = #{address,jdbcType=VARCHAR},
			</if>
			<if test="owner != null">
				ownerId = #{owner.id,jdbcType=INTEGER}
			</if>
			<if test="school != null">
				schoolId = #{school.id,jdbcType=INTEGER}
			</if>
		</set>
		where id = #{id,jdbcType=INTEGER}
	</update>

	<select id="find" parameterType="Map" resultMap="BaseResultMap">
		select *from activity
		<where>
			<if test="title != null and title!=''">
				and title = #{title}
			</if>
			<if test="activityId !=null and title!=''">
				and id = #{activityId}
			</if>
			<if test="time!=null and time!=''">
				and time = #{time}
			</if>
			<if test="number!=null and number!=''">
				and number = #{number}
			</if>
			<if test="imageUrl!=null">
				imageUrl = #{imageUrl}
			</if>
			<if test="address!=null">
				and address = #{address}
			</if>
			<if test="school!=null">
				and schoolId = #{school.id}
			</if>
			<if test="owner!=null">
				and ownerId = #{owner.id}
			</if>
			and status = 0
		</where>
	</select>

	<insert id="insert" parameterType="com.hemeiyue.entity.Activity"
		useGeneratedKeys="true" keyProperty="id">
		insert into activity
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null">
				id,
			</if>
			<if test="title != null">
				title,
			</if>
			<if test="content != null">
				content,
			</if>
			<if test="imageUrl!=null">
				imageUrl,
			</if>
			<if test="date != null">
				date,
			</if>
			<if test="time != null">
				time,
			</if>
			<if test="number != null">
				number,
			</if>
			<if test="address != null">
				address,
			</if>
			<if test="school != null">
				schoolId,
			</if>
			<if test="owner != null">
				ownerId,
			</if>
			<if test="status != null">
				status,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null">
				#{id,jdbcType=INTEGER},
			</if>
			<if test="title != null">
				#{title,jdbcType=VARCHAR},
			</if>
			<if test="content != null">
				#{content,jdbcType=VARCHAR},
			</if>
			<if test="imageUrl!=null">
				#{imageUrl,jdbcType=VARCHAR},
			</if>
			<if test="date != null">
				#{date,jdbcType=TIMESTAMP},
			</if>
			<if test="time != null">
				#{time,jdbcType=TIMESTAMP},
			</if>
			<if test="number != null">
				#{number,jdbcType=VARCHAR},
			</if>
			<if test="address != null">
				#{address,jdbcType=VARCHAR},
			</if>
			<if test="school != null">
				#{school.id,jdbcType=INTEGER},
			</if>
			<if test="owner != null">
				#{owner.id,jdbcType=INTEGER},
			</if>
			<if test="status != null">
				#{status,jdbcType=INTEGER},
			</if>
		</trim>
		<selectKey keyProperty="id" resultType="java.lang.Integer">
			select LAST_INSERT_ID() as id
		</selectKey>
	</insert>

	<select id="findAll" resultMap="activityShowModelMap">
		select id,title,date,time,number,imageUrl from activity
	</select>

	<select id="findById" resultMap="activityShowModelMap"
		parameterType="java.lang.Integer">
		select id,title,content,number,date,time,address,status from activity where
		id=#{id}
	</select>

	<select id="findArtivityList" resultType="com.hemeiyue.common.ActivityModel" parameterType="com.hemeiyue.entity.Activity">
		select id,title,date,time,number,imageUrl from activity where schoolId
		= #{school.id} and status  = 0 and date > #{date}
	</select>

	<select id="findActivityDetail" resultMap="activityShowModelMap" parameterType="com.hemeiyue.entity.Activity">
		select id,title,content,number,date,time,address,status,imageUrl from activity where
		id=#{id} and date > #{time}
	</select>
</mapper>